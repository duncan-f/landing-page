---
import Head from '../components/Head.astro';
import Header from '../components/Header.astro';
import {
  SITE_NAME,
  SITE_AUTHOR,
  SITE_DESCRIPTION
} from '../config.js';

export interface Props {
	title?: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <Head
    title={title ? title+' &bull; '+SITE_NAME : SITE_NAME}
    author={SITE_AUTHOR}
    description={SITE_DESCRIPTION}
  />

  <body class="bg-teal-50 dark:bg-zinc-900 text-zinc-900 dark:text-zinc-300 break-words leading-6 transition-colors duration-500">
    <Header />
    <slot />
  </body>
</html>
